---
const { article, articleType } = Astro.props;
---

<div class="card">
  <img src={article.imageUrl} class="img" />
  <h2>{article.title}</h2>
  <p>{article.summary}</p>
  <a href={`/${articleType}/${article.id}`}></a>
</div>
<style>
  .card {
    display: flex;
    padding: 1.5rem;
    flex-direction: column;
    gap: 1rem;
    border-radius: 0.5rem;
    cursor: pointer;
  }

  .img {
    display: block;
    width: 100%;
    height: auto;
  }

  h2 {
    font-size: 1.25rem;
    line-height: 1.75rem;
    font-weight: 700;
    color: #374151;
  }

  p {
    color: #374151;
  }

  a {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
  }

